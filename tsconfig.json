{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "declaration": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "sourceMap": true
    },
    "include": [
        "example/**/*",
        "src/**/*",
        "tests/**/*",
        "migrations/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
